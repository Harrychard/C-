#include <iostream>
using namespace std;

int main() {
    int bilangan;
    
    cout << "Masukkan angka : ";
    cin >> bilangan;
    
    switch (bilangan % 2) {
        case 0:
            cout << bilangan << " adalah bilangan genap." << endl;
            break;
        case 1:
            cout << bilangan << " adalah bilangan ganjil." << endl;
            break;
       
    }
    
    return 
}
